<!DOCTYPE html>
<html>
  <%- include("./partials/head"); %>
  <body>
    <%- include("./partials/header"); %>
    <main>
      <!-- <p>Welcome to <%= title %></p> -->
      <p>Newest:</p>
      <ul>
        <% postList.forEach((post) => { %>
          <li class="postPreview">
            <a href=<%= post.url %>>
              <h2><%= post.title %></h2>
            </a>
            <h3><%= post.subtitle %></h3>
            <p>
              By <%= post.author.full_name %>, 
              Published <%= new Date(post.timestamp).toUTCString() %>
            </p>
            <!-- <a href=<%= post.url %>>Read more

            </a> -->
          </li>
        <% }) %> 
      </ul>
      <p>End of post history</p>
    </main>
    <%- include("./partials/footer"); %>
  </body>
</html>
